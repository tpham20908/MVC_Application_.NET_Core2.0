    </div>
    <div class="col-md-6">
        <h2>Login</h2>
        <p>Access your existing account</p>
        <p>@Html.ActionLink("Login", "Login", "Acount", null, new { @class="btn btn-danger" })</p>
    </div>
    
</div>

